<script>
    $(function() {
        let first = $("select option:first").attr( "money" );
        $("[name='money']").val(first);
        $("[name='money']").attr( "min", first);

        $("[name='currency']").change(function() {
            let selected = $( "select option:selected" ).attr( "money" );
            $("[name='money']").val(selected);
            $("[name='money']").attr( "min", selected);
        });
    });
</script>

{{#if accounts}}
    <form action="/add_money" method="post">
        <div class="form-group">
            <label>Currency</label>
            <select class="form-control" name="currency" >
                {{#each accounts}}
                    <option money="{{this.money}}" value="{{this.currency}}">{{this.currency}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label>Increase money to this amount</label>
            <input class="form-control" name="money" type="number" value="" min="">
        </div>
        <button class="btn btn-success" type="submit">Add money</button>
    </form>
{{else}}
    <p class="text-center">You haven't accounts</p>
{{/if}}